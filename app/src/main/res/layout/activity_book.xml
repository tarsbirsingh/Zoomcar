<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookActivity">

    <ImageView
        android:id="@+id/art_imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/signup_back"
        android:contentDescription="@string/cover"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/car" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/back_small1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/car_name_inBook_display"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="Car Name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/one_eight_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/seater_inBook_name_display"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="80dp"
            android:text="Seater"
            android:textColor="@android:color/white"
            android:textSize="@dimen/one_six_sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_back"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ek1"
            android:layout_alignTop="@+id/name_edit_textId"
            android:text="Name"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/name_edit_textId"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/km_edit_textId"
            android:layout_marginTop="38dp"
            android:hint="Tarsbir Singh"
            android:inputType="textPersonName"
            android:maxLength="15"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/ek1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ek2"
            android:layout_below="@+id/name_edit_textId"
            android:text="Enter KM"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/km_edit_textId"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/ek1"
            android:layout_alignStart="@+id/day_edit_textId"
            android:hint="30"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/ek2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ek3"
            android:layout_below="@+id/km_edit_textId"
            android:text="Enter Day"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/day_edit_textId"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/ek2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"
            android:hint="5"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/ek3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/day_edit_textId"
            android:layout_marginStart="21dp"
            android:text="Phone Number"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/phone_edit_textId"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/name_edit_textId"
            android:layout_below="@+id/ek2"
            android:hint="9878285824"
            android:inputType="phone"
            android:maxLength="10"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/ek4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ek"
            android:layout_below="@+id/phone_edit_textId"
            android:text="Pick Drop Address"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/address_edit_textId"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:layout_alignStart="@+id/name_edit_textId"
            android:layout_below="@+id/phone_edit_textId"
            android:hint="Amritsar"
            android:inputType="textPostalAddress"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:text="Total Fare"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/show_fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Check Fare->"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/fareCheck_withFuel_buttonId_book_activity"
                android:layout_width="110dp"
                android:layout_height="37dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/sign_back"
                android:gravity="center"
                android:text="With fuel"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/fareCheck_without_buttonId_book_activity"
                android:layout_width="110dp"
                android:layout_height="37dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/sign_back"
                android:gravity="center"
                android:text="Withoutfuel"
                android:textColor="@android:color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="290dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/book_buttonId_book_activity"
                android:layout_width="120dp"
                android:layout_height="37dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="40dp"
                android:background="@drawable/sign_back"
                android:text="Book With Fuel"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/bookWithoutNew_buttonId_book_activity"
                android:layout_width="145dp"
                android:layout_height="37dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="40dp"
                android:background="@drawable/sign_back"
                android:text="Book Without Fuel"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>